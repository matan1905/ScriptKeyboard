<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:keyWidth="10%p"
    android:horizontalGap="0px"
    android:verticalGap="0px"
    android:keyHeight="8%p">

    <Row android:keyWidth="8.3%p">
        <Key android:codes="49"  android:keyLabel="1" android:keyEdgeFlags="left"/>
        <Key android:codes="50" android:keyLabel="2"/>
        <Key android:codes="51"  android:keyLabel="3"/>
        <Key android:codes="52" android:keyLabel="4"/>
        <Key android:codes="53" android:keyLabel="5"/>
        <Key android:codes="54" android:keyLabel="6"/>
        <Key android:codes="55" android:keyLabel="7"/>
        <Key android:codes="56"  android:keyLabel="8"/>
        <Key android:codes="57"  android:keyLabel="9"/>
        <Key android:codes="48"  android:keyLabel="0" />
        <Key android:codes="34"  android:keyLabel="&quot;" android:popupKeyboard="@xml/popup_template"  />
        <Key android:codes="-420" android:keyLabel="@string/script_brackets" android:popupKeyboard="@xml/popup_template" android:keyEdgeFlags="right"/>
    </Row>
    <Row  android:keyWidth="11.111%p">
        <Key  android:keyLabel="'" android:keyEdgeFlags="left" android:popupKeyboard="@xml/popup_template" android:popupCharacters="%"/>
        <Key  android:keyLabel="ק"  android:popupKeyboard="@xml/popup_template" android:popupCharacters="^"/>
        <Key  android:keyLabel="ר"  android:popupKeyboard="@xml/popup_template" android:popupCharacters="~" />
        <Key android:keyLabel="א"  android:popupKeyboard="@xml/popup_template" android:popupCharacters="|"/>
        <Key  android:keyLabel="ט"  android:popupKeyboard="@xml/popup_template" android:popupCharacters="["/>
        <Key  android:keyLabel="ו"  android:popupKeyboard="@xml/popup_template" android:popupCharacters="]" />
        <Key android:keyLabel="ן"  android:popupKeyboard="@xml/popup_template" android:popupCharacters="@string/smaller_than"/>
        <Key  android:keyLabel="ם"  android:popupKeyboard="@xml/popup_template" android:popupCharacters=">"/>
        <Key   android:keyLabel="פ" android:popupKeyboard="@xml/popup_template" android:popupCharacters="&quot;&quot;" />
    </Row>
    <Row  android:keyWidth="10%p">
        <Key  android:keyLabel="ש"  android:popupKeyboard="@xml/popup_template"  android:popupCharacters="@string/at_char" android:keyEdgeFlags="left" />
        <Key android:keyLabel="ד" android:popupCharacters="#" android:popupKeyboard="@xml/popup_template"/>
        <Key  android:keyLabel="ג" android:popupKeyboard="@xml/popup_template" android:popupCharacters="&amp;"/>
        <Key android:keyLabel="כ" android:popupKeyboard="@xml/popup_template" android:popupCharacters="*" />
        <Key  android:keyLabel="ע" android:popupKeyboard="@xml/popup_template" android:popupCharacters="-"/>
        <Key  android:keyLabel="י" android:popupKeyboard="@xml/popup_template" android:popupCharacters="+"/>
        <Key  android:keyLabel="ח" android:popupKeyboard="@xml/popup_template" android:popupCharacters="="/>
        <Key android:keyLabel="ל" android:popupKeyboard="@xml/popup_template" android:popupCharacters="/"/>
        <Key  android:keyLabel="ך" android:popupKeyboard="@xml/popup_template" android:popupCharacters="&#61;" />
        <Key  android:keyLabel="ף" android:popupKeyboard="@xml/popup_template" android:popupCharacters="()" />
    </Row>
    <Row>
        <Key  android:keyLabel="ז" android:popupKeyboard="@xml/popup_template" android:popupCharacters="_"/>
        <Key android:keyLabel="ס"  android:popupKeyboard="@xml/popup_template" android:popupCharacters="$"/>
        <Key  android:keyLabel="ב" android:popupKeyboard="@xml/popup_template" android:popupCharacters="'"/>
        <Key  android:keyLabel="ה" android:popupKeyboard="@xml/popup_template" android:popupCharacters=":" />
        <Key  android:keyLabel="נ" android:popupKeyboard="@xml/popup_template" android:popupCharacters="{"/>
        <Key  android:keyLabel="מ" android:popupKeyboard="@xml/popup_template" android:popupCharacters="}"/>
        <Key android:keyLabel="צ" android:popupKeyboard="@xml/popup_template" android:popupCharacters="!"/>
        <Key  android:keyLabel="ת" android:popupKeyboard="@xml/popup_template" android:popupCharacters="("/>
        <Key  android:keyLabel="ץ" android:popupKeyboard="@xml/popup_template" android:popupCharacters=")"/>
        <Key android:codes="-5"    android:isRepeatable="true" android:keyIcon="@drawable/ic_backspace" android:keyEdgeFlags="right"/>
    </Row>
    <Row android:rowEdgeFlags="bottom" android:keyHeight="9%p">
        <Key android:codes="-2"  android:keyIcon="@drawable/ic_language_white_24dp" android:keyWidth="10%p"/>
        <Key android:codes="-101" android:keyIcon="@drawable/ic_play_circle_outline_white_24dp" android:keyWidth="10%p"/>
        <Key android:codes="44" android:keyLabel="," android:popupCharacters=";"/>
        <Key android:codes="32"   android:keyLabel="SPACE"            android:keyWidth="45%p"/>
        <Key android:codes="46" android:keyLabel="." android:popupCharacters="@string/questionMark"/>
        <Key android:codes="-4"   android:keyWidth="15%p"  android:keyIcon="@drawable/ic_keyboard_return" android:keyEdgeFlags="right"/>

    </Row>
</Keyboard>